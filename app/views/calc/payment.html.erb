<form action="/payment/results">
  <div>
   <label for="apr">APR</label>
   <input id="apr" name="apr" type="text" placeholder="E.g. 5.42">
  </div>

  <div>
   <label for="years">Number of years</label>
   <input id="years" name="years" type="text" placeholder="How many years to repay?">
  </div>

  <div>
   <label for="principal">Principal</label>
   <input id="principal" name="principal" type="text" placeholder="How much principal?">
  </div>

  <div>
    <button>Calculate monthly payment</button>
  </div>
</form>
